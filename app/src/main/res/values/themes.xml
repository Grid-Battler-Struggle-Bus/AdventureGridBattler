<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GridBattlerGame" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.GridBattlerGame" parent="Base.Theme.GridBattlerGame" />
    <style name="grid_button">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="grid_sprite">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="friend_grid">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:src">@drawable/board_background_friend</item>
    </style>
    <style name="foe_grid">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:src">@drawable/board_background_foe</item>
    </style>
    <style name="available_movement">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:src">@drawable/movement_select_icon</item>
    </style>
    <style name="available_target">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:src">@drawable/enemy_select_icon</item>
    </style>
    <style name="character_select">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:src">@drawable/character_select_icon</item>
    </style>
</resources>