<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/topofselection"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <GridLayout
            android:id="@+id/background_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2">

            <ImageView style="@style/foe_grid" />

            <ImageView style="@style/friend_grid" />

            <ImageView style="@style/foe_grid" />

            <ImageView style="@style/friend_grid" />

            <ImageView style="@style/foe_grid" />
        </GridLayout>

        <GridLayout
            android:id="@+id/button_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2">

            <Button
                android:id="@+id/fighter_button"
                style="@style/grid_button"
                android:text="Fighter"/>

            <Button
                android:id="@+id/mage_button"
                style="@style/grid_button"
                android:text="Mage"/>

            <Button
                android:id="@+id/ranger_button"
                style="@style/grid_button"
                android:text="Ranger"/>

            <Button
                android:id="@+id/rogue_button"
                style="@style/grid_button"
                android:text="Rogue"/>

            <Button
                android:id="@+id/cleric_button"
                style="@style/grid_button"
                android:text="Cleric"/>
        </GridLayout>
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/choose_char_text"
        android:text="Choose Your Character"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Confirm Selection" />

</androidx.constraintlayout.widget.ConstraintLayout>