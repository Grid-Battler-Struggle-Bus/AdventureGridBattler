            <TextView style="@style/grid_sprite"/>
            <TextView style="@style/grid_sprite"/>
            <TextView style="@style/grid_sprite"/>
            <TextView style="@style/grid_sprite"/>
            <TextView style="@style/grid_sprite"/>
            <TextView style="@style/grid_sprite"/>
            <TextView style="@style/grid_sprite"/>
            <TextView style="@style/grid_sprite"/>
            <TextView style="@style/grid_sprite"/>

        </GridLayout>
        <GridLayout
            android:id="@+id/button_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="8"
            android:rowCount="3">

            <Button style="@style/grid_button" />
            <Button style="@style/grid_button" />
            <Button style="@style/grid_button" />
            <Button style="@style/grid_button" />
            <Button style="@style/grid_button" />
            <Button style="@style/grid_button" />
            <Button style="@style/grid_button" />
