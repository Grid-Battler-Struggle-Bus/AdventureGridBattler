    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintEnd_toStartOf="@+id/rightLayout"
        app:layout_constraintStart_toEndOf="@+id/leftLayout"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/phaseBanner"
            android:layout_width="180dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/turnBanner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">


            <ImageView
                android:id="@+id/bannerImage1"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:src="@drawable/dragonheader_a"
                android:adjustViewBounds="true" />

            <TextView
                android:id="@+id/bannerText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phase"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="23sp"
                android:layout_gravity="center"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/turnBanner"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/phaseBanner"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/bannerImage2"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:src="@drawable/dragonheader_a"
                android:adjustViewBounds="true" />

            <TextView
                android:id="@+id/bannerText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turn"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="23sp"
                android:layout_gravity="center"/>
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>




    <FrameLayout
        android:id="@+id/bottomLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rightLayout"
        app:layout_constraintStart_toEndOf="@+id/leftLayout"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout">

        <ImageButton
            android:id="@+id/continue_button"
            android:layout_width="97dp"
            android:layout_height="78dp"
            android:background="@drawable/pass_button_selector"
            android:contentDescription="@string/pass_turn"
            android:padding="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/frameLayout"
            app:layout_constraintStart_toStartOf="@+id/leftLayout" />
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/leftLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/frameLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/character_one_card_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/dragon9slices_b"
            app:layout_constraintEnd_toEndOf="@+id/character_one_card"
            app:layout_constraintStart_toStartOf="@+id/character_one_card"
            app:layout_constraintTop_toTopOf="@+id/character_one_card"
            app:layout_constraintBottom_toBottomOf="@+id/character_one_card" />

        <ImageView
            android:id="@+id/character_one_card"
            style="@style/grid_sprite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/character_two_card"
            app:srcCompat="@drawable/empty_grid" />

        <ProgressBar
            android:id="@+id/character_one_bar"
            style="?android:attr/progressBarStyleHorizontal"
            app:layout_constraintEnd_toEndOf="@+id/character_one_bar_cover"
            app:layout_constraintStart_toStartOf="@+id/character_one_bar_cover"
            app:layout_constraintTop_toBottomOf="@+id/character_one_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:progressDrawable="@drawable/health_bar"
            android:progress="100" />

        <ImageView
            android:id="@+id/character_one_bar_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/dragonhealthbar_c"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/character_one_bar"
            app:layout_constraintBottom_toBottomOf="@+id/character_one_bar" />

        <ImageView
            android:id="@+id/character_two_card_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/dragon9slices_b"
            app:layout_constraintEnd_toEndOf="@+id/character_two_card"
            app:layout_constraintStart_toStartOf="@+id/character_two_card"
            app:layout_constraintTop_toTopOf="@+id/character_two_card"
            app:layout_constraintBottom_toBottomOf="@+id/character_two_card" />

        <ImageView
            android:id="@+id/character_two_card"
            style="@style/grid_sprite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/character_one_card"
            app:layout_constraintBottom_toTopOf="@+id/character_three_card"
            app:srcCompat="@drawable/empty_grid" />

        <ProgressBar
            android:id="@+id/character_two_bar"
            style="?android:attr/progressBarStyleHorizontal"
            app:layout_constraintEnd_toEndOf="@+id/character_two_bar_cover"
            app:layout_constraintStart_toStartOf="@+id/character_two_bar_cover"
            app:layout_constraintTop_toBottomOf="@+id/character_two_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:progressDrawable="@drawable/health_bar"
            android:progress="100" />

        <ImageView
            android:id="@+id/character_two_bar_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/dragonhealthbar_c"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/character_two_bar"
            app:layout_constraintBottom_toBottomOf="@+id/character_two_bar" />

        <ImageView
            android:id="@+id/character_three_card_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/dragon9slices_b"
            app:layout_constraintEnd_toEndOf="@+id/character_three_card"
            app:layout_constraintStart_toStartOf="@+id/character_three_card"
            app:layout_constraintTop_toTopOf="@+id/character_three_card"
            app:layout_constraintBottom_toBottomOf="@+id/character_three_card" />

        <ImageView
            android:id="@+id/character_three_card"
            style="@style/grid_sprite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/character_two_card"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/empty_grid" />

        <ProgressBar
            android:id="@+id/character_three_bar"
            style="?android:attr/progressBarStyleHorizontal"
            app:layout_constraintEnd_toEndOf="@+id/character_three_bar_cover"
            app:layout_constraintStart_toStartOf="@+id/character_three_bar_cover"
            app:layout_constraintTop_toBottomOf="@+id/character_three_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:progressDrawable="@drawable/health_bar"
            android:progress="100" />

        <ImageView
            android:id="@+id/character_three_bar_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/dragonhealthbar_c"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/character_three_bar"
            app:layout_constraintBottom_toBottomOf="@+id/character_three_bar" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/rightLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/frameLayout"
        ></LinearLayout>

    <FrameLayout
        android:id="@+id/turnOverlay"
        android:layout_width="260dp"
        android:layout_height="80dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/turnOverlayImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/dragonheader_b"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/turnOverlayText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Player Turn"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="22sp"
            android:maxLines="1"
            android:ellipsize="end"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>