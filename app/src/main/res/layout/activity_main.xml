            <ImageView style="@style/friend_grid"/>
            <ImageView style="@style/foe_grid"/>
            <ImageView style="@style/foe_grid"/>
            <ImageView style="@style/foe_grid"/>
            <ImageView style="@style/foe_grid"/>
        </GridLayout>
        <GridLayout
            android:id="@+id/sprite_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="8"
            android:rowCount="3">

            <TextView style="@style/grid_sprite"/>
            <TextView style="@style/grid_sprite"/>
            <TextView style="@style/grid_sprite"/>
            <TextView style="@style/grid_sprite"/>
            <TextView style="@style/grid_sprite"/>
            <TextView style="@style/grid_sprite"/>
            <TextView style="@style/grid_sprite"/>
            <TextView style="@style/grid_sprite"/>
            <TextView style="@style/grid_sprite"/>
            <TextView style="@style/grid_sprite"/>
            <TextView style="@style/grid_sprite"/>
            <TextView style="@style/grid_sprite"/>
            <TextView style="@style/grid_sprite"/>
